<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewStyle.regular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/post_nord_sans_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewStyle.medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/post_nord_sans_medium</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonStyle.regular" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/post_nord_sans_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle.medium" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/post_nord_sans_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextStyle.regular" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_46sdp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/post_nord_sans_regular</item>
        <item name="android:hint">@string/event_title</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShapeAppearanceOverlay.ShapeAbleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Adjust the corner radius as per your requirement -->
    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
    </style>

    <style name="CustomNumberPicker" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- <item name="colorAccent">@color/text_primary</item>-->
        <!-- Remove selection divider -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/accent_primary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/post_nord_sans_regular</item>
        <item name="android:editTextColor" tools:ignore="NewApi">@color/accent_primary</item>
        <item name="backgroundColor">@color/background_secondary</item>
        <item name="android:textFilterEnabled">true</item>
        <item name="android:textCursorDrawable">@drawable/custom_search_cursor_drawable</item>
    </style>

    <style name="Widget.Theme.CalendarApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.CalendarApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>