<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalendarApp" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="colorPrimary">@color/action_bar_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item><!--Use light(false) | dark(true) text/icons-->

        <item name="iconDrawable">@drawable/hamburger_icon</item>
        <item name="iconBackArrow">@drawable/back_arrow_icon</item>
        <item name="iconSearch">@drawable/search_icon</item>
        <item name="iconBackToDate">@drawable/back_to_date_icon</item>

        <item name="iconYear">@drawable/year_icon</item>
        <item name="iconMonth">@drawable/month_icon</item>
        <item name="iconCountry">@drawable/select_country_icon</item>
        <item name="iconLanguage">@drawable/select_language_icon</item>
        <item name="iconCalendar">@drawable/first_day_of_the_week_icon</item>
        <item name="iconJumpToDate">@drawable/jump_to_date_icon</item>
        <item name="iconTheme">@drawable/app_theme_icon</item>
        <item name="iconRateApp">@drawable/rate_our_app_icon</item>
        <item name="iconPrivacy">@drawable/privacy_policy_icon</item>
        <item name="iconDeviceInfo">@drawable/device_information_icon</item>

        <item name="iconLeft">@drawable/left_icon</item>
        <item name="iconRight">@drawable/right_icon</item>

        <item name="iconSelectedDateBackground">@drawable/date_background</item>
        <item name="eventBackground">@drawable/rectangle_bg</item>

    </style>

    <style name="Theme.CalendarApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Toolbar Theme -->
    <style name="Theme.CalendarApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">//"ThemeOverlay.AppCompat.Dark.ActionBar"
<!--        <item name="titleTextAppearance">@style/CustomToolbarTitleStyle</item>-->
    </style>

    <style name="Theme.CalendarApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
















    <!--    its noting to use only ref default-->
    <style name="Theme.CalendarApp1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
    <!--    its noting to use only ref default understanding-->
    <style name="Theme.CalendarApp2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorControlNormal">@color/drawerIconColor</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/action_bar_color</item>
        <item name="colorPrimaryVariant">@color/app_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/action_button_color</item>
        <item name="colorSecondaryVariant">@color/action_button_color_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item><!-- Use light(false) | dark(true) text/icons -->
        <!-- Text color. -->
        <item name="android:textColor">@color/text_primary</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>
</resources>