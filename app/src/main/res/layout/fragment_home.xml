<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="@dimen/_4sdp"
    tools:context=".presentation.ui.home.HomeFragment"
    tools:ignore="HardcodedText">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView_date1"
        app:layout_constraintEnd_toStartOf="@id/textView2"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon"
        app:layout_constraintStart_toEndOf="@id/textView1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView_date2"
        app:layout_constraintEnd_toStartOf="@id/textView3"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintBottom_toTopOf="@id/textView_date3"
        app:layout_constraintEnd_toStartOf="@id/textView4"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@id/textView_date4"
        app:layout_constraintEnd_toStartOf="@id/textView5"
        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintBottom_toTopOf="@id/textView_date5"
        app:layout_constraintEnd_toStartOf="@id/textView6"
        />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fri"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView5"
        app:layout_constraintBottom_toTopOf="@id/textView_date6"
        app:layout_constraintEnd_toStartOf="@id/textView7"
        />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView6"
        app:layout_constraintBottom_toTopOf="@id/textView_date7"
        app:layout_constraintEnd_toEndOf="parent"
        />

<!--    date-->
    <TextView
        android:id="@+id/textView_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintEnd_toStartOf="@id/textView_date2"
        />
    <TextView
        android:id="@+id/textView_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02"
        app:layout_constraintStart_toEndOf="@id/textView_date1"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintEnd_toStartOf="@id/textView_date3"
        />
    <TextView
        android:id="@+id/textView_date3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03"
        app:layout_constraintTop_toBottomOf="@id/textView_date1"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:layout_constraintEnd_toStartOf="@id/textView_date4"
        />
    <TextView
        android:id="@+id/textView_date4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04"
        app:layout_constraintStart_toEndOf="@id/textView_date3"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintEnd_toStartOf="@id/textView_date5"
        />
    <TextView
        android:id="@+id/textView_date5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05"
        app:layout_constraintStart_toEndOf="@id/textView_date4"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintEnd_toStartOf="@id/textView_date6"
        />
    <TextView
        android:id="@+id/textView_date6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06"
        app:layout_constraintStart_toEndOf="@id/textView_date5"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        app:layout_constraintEnd_toStartOf="@id/textView_date7"
        />
    <TextView
        android:id="@+id/textView_date7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07"
        app:layout_constraintStart_toEndOf="@id/textView_date6"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textView_date8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_date1"
        app:layout_constraintEnd_toStartOf="@id/textView2"
        />
    <TextView
        android:id="@+id/textView_date9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09"
        app:layout_constraintStart_toEndOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/textView_date2"
        app:layout_constraintEnd_toStartOf="@id/textView3"
        />
    <TextView
        android:id="@+id/textView_date10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toEndOf="@id/textView_date3"
        app:layout_constraintEnd_toStartOf="@id/textView4"
        />
    <TextView
        android:id="@+id/textView_date11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/textView_date4"
        app:layout_constraintEnd_toStartOf="@id/textView5"
        />
    <TextView
        android:id="@+id/textView_date12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@id/textView_date5"
        app:layout_constraintEnd_toStartOf="@id/textView6"
        />
    <TextView
        android:id="@+id/textView_date13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        app:layout_constraintStart_toEndOf="@id/textView5"
        app:layout_constraintTop_toBottomOf="@id/textView_date6"
        app:layout_constraintEnd_toStartOf="@id/textView7"
        />
    <TextView
        android:id="@+id/textView_date14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14"
        app:layout_constraintStart_toEndOf="@id/textView6"
        app:layout_constraintTop_toBottomOf="@id/textView_date7"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>





